<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.ajoan.welcome.SignupActivity">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="pageTitle" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/input_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="title" />

        <EditText
            android:id="@+id/input_et1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_title1"
            android:inputType="text"
            android:hint="hint"
            android:textSize="16dp"
            android:width="300dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:maxLines="1" />

        <TextView
            android:id="@+id/input_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_et1"
            android:textSize="14dp"
            android:width="300dp"
            android:height="0dp"
            android:textColor="@color/colorAccent"
            android:text="message" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/input_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="title" />

        <EditText
            android:id="@+id/input_et2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_title2"
            android:inputType="text"
            android:hint="hint"
            android:textSize="16dp"
            android:width="300dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:maxLines="1" />

        <TextView
            android:id="@+id/input_msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_et2"
            android:textSize="14dp"
            android:width="300dp"
            android:height="0dp"
            android:textColor="@color/colorAccent"
            android:text="message" />

    </RelativeLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/submit_btn"
            android:width="180dp"
            android:textColor="@color/White"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:text="Submit" />

    </RelativeLayout>

</LinearLayout>
